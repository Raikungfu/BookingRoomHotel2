@model IEnumerable<BookingRoomHotel.Models.Staff>

@{
    ViewData["Title"] = "Staff Management";
}

<h1>Staff Management</h1>
<div>
    <a asp-controller="Admin" asp-action="Dashboard">Back to DashBoard</a>
</div>
<p>
    <a onclick="sendJwt('/Staffs/Create','')">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a class="btn btn-outline-dark shadow-none" onclick="sendJwt('/Staffs/Edit/', '@item.Id')">Edit</a> |
                    <a class="btn btn-outline-dark shadow-none" onclick="sendJwt('/Staffs/Details/', '@item.Id')">Details</a> |
                    <a class="btn btn-outline-dark shadow-none" onclick="sendJwt('/Staffs/Delete/', '@item.Id')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
