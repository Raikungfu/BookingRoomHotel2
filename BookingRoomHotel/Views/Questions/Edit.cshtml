@model BookingRoomHotel.Models.Question

@{
    ViewData["Title"] = "Edit";
}

<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h4 class="page-title mt-5">Edit questions</h4>
            </div>
        </div>
    </div>

    <div>
        <a onclick="return sendJwt('/Questions/Index','')">Back to List</a>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form onsubmit="return sendJwtAndData('/Questions/Edit/','@Model.Id')" id="formData">
                <input type="hidden" asp-for="Id" />
                <div class="row formtype">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" readonly/>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" readonly/>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" readonly />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <input asp-for="Message" class="form-control" readonly/>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Response" class="control-label"></label>
                            <textarea type="text" class="form-control" rows="5" asp-for="Response"></textarea>
                            <span asp-validation-for="Response" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Status" class="control-label"></label>
                            <select class="form-select" asp-for="Status">
                                <option value="" style="display:none;"></option>
                                <option value="Reject">Reject answer</option>
                                <option value="Pending">Pending</option>
                                <option value="Processing">Processing</option>
                                <option value="Complete">Complete</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary buttonedit1">Send response</button>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<div style="text-align: center ;">
    <p>------------------------------------------------------------</p>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}