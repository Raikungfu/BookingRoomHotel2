@model BookingRoomHotel.ViewModels.ListRoomTypeViewModel

@{
    ViewData["Title"] = "Customer Management";
}

<h1>Room Types Management</h1>
<div>
    <a asp-controller="Admin" asp-action="Dashboard">Back to DashBoard</a>
</div>

<div class="row">
    <div class="d-flex">
        <div class="card card-table flex-fill">
            <div class="card-header">
                <h4 class="card-title float-left mt-2">Room Types</h4>
                <button type="button" class="btn btn-primary float-right veiwbutton">View All</button>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-center">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ListRoomTypes)
                            {
                                <tr>
                                    <td class="text-nowrap">
                                        @Html.DisplayFor(modelItem => item.RoomTypeID)
                                    </td>
                                    <td class="text-nowrap">
                                        @Html.DisplayFor(modelItem => item.TypeName)
                                    </td>

                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v ellipse_color"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/Customers/Edit/', '@item.RoomTypeID')"><i class="fas fa-pencil-alt m-r-5"></i> Edit</a>
                                                <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/Customers/Details/', '@item.RoomTypeID')"><i class="fas fa-id-card m-r-5"></i> Details</a>
                                                <a class="dropdown-item" href="javascript:void(0)" onclick="sendJwt('/Customers/Delete/', '@item.RoomTypeID')" @*data-toggle="modal" data-target="#delete_asset"*@><i class="fas fa-trash-alt m-r-5"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= Model.Count; i++)
            {
                <li class="page-item"><a class="page-link" href="javascript:void(0)" onclick="return pagination('/Customers/Index/' + '@i')">@i</a></li>
            }
        </ul>
    </nav>
</div>
<div id="delete_asset" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body text-center">
                <img src="~/css/assets/img/sent.png" alt="" width="50" height="46">
                <h3 class="delete_class">Are you sure want to delete this Asset?</h3>
                <div class="m-t-20">
                    <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                    <button onclick="delete('/RoomTypes/Delete/')" class="btn btn-danger" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>
</div>